{
    "name": "portfolio-frontend",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "server": "cd server && npm run dev",
        "dev:all": "concurrently \"npm run dev\" \"npm run server\"",
        "build:all": "npm run build && cd server && npm install",
        "start:all": "concurrently \"npm run start\" \"cd server && npm run start\""
    },
    "dependencies": {
        "autoprefixer": "^10.4.21",
        "axios": "^1.6.5",
        "framer-motion": "^11.18.2",
        "next": "^14.2.26",
        "postcss": "^8.5.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-icons": "^5.5.0",
        "tailwindcss": "^3.4.17"
    },
    "devDependencies": {
        "@types/node": "^20.17.28",
        "@types/react": "^18.3.20",
        "@types/react-dom": "^18.3.5",
        "concurrently": "^8.2.2",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.1.0",
        "typescript": "^5.8.2"
    }
}